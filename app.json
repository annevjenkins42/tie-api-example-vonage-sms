{
    "name": "tie-api-example-nexmo-sms",
    "description": "A Teneo bot connector for Nexmo SMS.",
    "keywords": [
        "bot",
        "Nexmo",
        "Teneo",
        "SMS"
    ],
    "repository": "https://github.com/artificialsolutions/tie-api-example-nexmo-sms",
    "env": {    
        "TENEO_ENGINE_URL": {
            "description": "Please input your Teneo Engine URL. https://some.engine/instance/",
            "required":true
        },      
        "NEXMO_NUMBER": {
            "description": "Number to send the SMS from in E.164 format",
            "required":true
        },
        "NEXMO_API_KEY": {
            "description": "The Nexmo API key",
            "required":true
        },        
        "NEXMO_API_SECRET": {
            "description": "The Nexmo API secret",
            "required":true
        }
    }
}
